<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--    Creating Myfatoorah payment method -->
    <record id="payment_method_myfatoorah" model="payment.method">
        <field name="name">Myfatoorah</field>
        <field name="code">myfatoorah</field>
         <field name="image"
               type="base64"
               file="myfatoorah_payment_gateway/static/description/icon.png"/>
        <field name="sequence">2</field>
        <field name="support_tokenization">True</field>
        <field name="support_express_checkout">False</field>
        <field name="support_refund">partial</field>
    </record>
</odoo>
