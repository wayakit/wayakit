<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_price_suggestion_tree_view" model="ir.ui.view">
            <field name="name">product.price.suggestion.tree</field>
            <field name="model">product.price.suggestion</field>
            <field name="arch" type="xml">
                <tree string="Price Suggestions" create="false" edit="false" delete="false" default_order="last_update_date desc">
                    <field name="last_update_date"/>
                    <field name="product_id_str"/>
                    <field name="product_name"/>
                    <field name="product_type"/>
                    <field name="generic_product_type"/>
                    <field name="subindustry"/>
                    <field name="industry"/>
                    <field name="volume_units"/>
                    <field name="production_cost"/>
                    <field name="suggested_price"/>
                    <field name="predicted_price_per_unit" optional="hide"/>
                    <field name="profit"/>
                    <field name="model_confidence" optional="show"/>
                    <field name="market_min_found" optional="show"/>
                    <field name="market_max_found" optional="show"/>
                    <field name="competitors_count" optional="show"/>
                </tree>
            </field>
        </record>

        <record id="product_price_suggestion_search_view" model="ir.ui.view">
            <field name="name">product.price.suggestion.search</field>
            <field name="model">product.price.suggestion</field>
            <field name="arch" type="xml">
                <search string="Search Price Suggestions">
                    <field name="product_id_str"/>
                    <field name="product_type"/>
                    <field name="generic_product_type"/>
                    <field name="subindustry"/>
                    <field name="industry"/>
                    <field name="volume_units"/>
                    <group expand="1" string="Group By">
                        <filter string="Industry" name="industry" context="{'group_by':'industry'}"/>
                        <filter string="Sub-industry" name="subindustry" context="{'group_by':'subindustry'}"/>
                        <filter string="Generic Product Type" name="generic_product_type" context="{'group_by':'generic_product_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="product_price_suggestion_form_view" model="ir.ui.view">
            <field name="name">product.price.suggestion.form</field>
            <field name="model">product.price.suggestion</field>
            <field name="arch" type="xml">
                 <form string="Price Suggestion" create="false" edit="false" delete="false">
                    <sheet>
                        <div class="oe_title">
                            <label for="product_name" class="oe_edit_only"/>
                            <h1><field name="product_name" placeholder="Product Name"/></h1>
                            <h2><field name="product_id_str"/></h2>
                        </div>
                        <group>
                            <group string="Product Classification">
                                <field name="last_update_date"/>
                                <field name="product_type"/>
                                <field name="generic_product_type"/>
                                <field name="subindustry"/>
                                <field name="industry"/>
                                <field name="volume_units"/>
                            </group>
                            <group string="Price &amp; Market Intelligence">
                                <field name="production_cost"/>
                                <field name="suggested_price" decoration-bf="1"/>
                                <field name="predicted_price_per_unit"/>
                                <field name="profit"/>
                                <separator string="Market Analysis"/>
                                <label for="model_confidence"/>
                                <div class="o_row">
                                    <field name="model_confidence"/>
                                    <span>%</span>
                                </div>
                                <field name="market_min_found"/>
                                <field name="market_max_found"/>
                                <field name="competitors_count"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_product_price_suggestion" model="ir.actions.act_window">
            <field name="name">Price Suggestions</field>
            <field name="res_model">product.price.suggestion</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    There are no price suggestions yet.
                </p>
            </field>
        </record>

        <menuitem
            id="menu_price_intelligence_root"
            name="Price Intelligence"
            sequence="10"/>

        <menuitem
            id="menu_product_price_suggestion"
            name="Price Suggestions"
            parent="menu_price_intelligence_root"
            action="action_product_price_suggestion"
            groups="price_intelligence.group_price_intelligence_user"/>
            sequence="10"/>

    </data>
</odoo>