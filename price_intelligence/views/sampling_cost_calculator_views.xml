<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sampling_cost_calculator_form" model="ir.ui.view">
        <field name="name">sampling.cost.calculator.form</field>
        <field name="model">sampling.cost.calculator</field>
        <field name="arch" type="xml">
            <form string="Sampling Cost Calculator">
                <header>
                    </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="helpdesk_ticket_id"
                                   options="{'no_create': True, 'no_open': False}"/>
                        </group>
                        <group>
                            <field name="date"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Product Lines" name="calculator_lines">
                            <field name="calculator_line_ids" mode="tree,kanban">
                                <tree string="Product Lines" editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id"
                                    options="{'no_create': True, 'no_open': False}"/>
                                    <field name="product_name"/>
                                    <field name="volume_product_reference_l"/>
                                    <field name="volume_sample_l"/>
                                    <field name="bottle"/>
                                    <field name="label"/>
                                    <field name="labor"/>
                                    <field name="liquid_cost"/>
                                    <field name="microfibers"/>
                                    <field name="plastic_bag"/>
                                    <field name="other_costs"/>
                                    <field name="line_total_cost" sum="Total"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                    <group class="oe_subtotal_footer oe_right">
                        <field name="total_lines_cost" readonly="1" force_save="1"/>
                        <field name="total_volume_sample_l" readonly="1" force_save="1"/>
                        <field name="shipping_cost" readonly="1" force_save="1"/>
                        <div class="oe_subtotal_footer_separator oe_inline">
                            <label for="grand_total_cost"/>
                        </div>
                        <field name="grand_total_cost" nolabel="1" class="oe_subtotal_footer_separator" readonly="1" force_save="1"/>
                    </group>
                </sheet>

            </form>
        </field>
    </record>

    <record id="view_sampling_cost_calculator_tree" model="ir.ui.view">
        <field name="name">sampling.cost.calculator.tree</field>
        <field name="model">sampling.cost.calculator</field>
        <field name="arch" type="xml">
            <tree string="Sampling Cost Calculators">
                <field name="name"/>
                <field name="helpdesk_ticket_id"/>
                <field name="date"/>
                <field name="grand_total_cost" sum="Grand Total"/>
            </tree>
        </field>
    </record>

    <record id="action_sampling_cost_calculator" model="ir.actions.act_window">
        <field name="name">Sampling Cost Calculator</field>
        <field name="res_model">sampling.cost.calculator</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Sampling Cost Calculation
            </p>
        </field>
    </record>

    <menuitem id="menu_sampling_cost_calculator"
        name="Sampling Cost Calculator"
        parent="menu_price_intelligence_root"
        action="action_sampling_cost_calculator"
        sequence="50"/>

    </odoo>