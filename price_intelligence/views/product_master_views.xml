<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_product_master_form" model="ir.ui.view">
            <field name="name">product.master.form</field>
            <field name="model">product.master</field>
            <field name="arch" type="xml">
                <form string="Master Product">
                    <sheet>
                        <field name="is_ai_pricing_active" invisible="1"/>
                        <field name="is_box_8_4" invisible="1"/>
                        <group>
                            <group>
                                <field name="product_name"/>
                                <field name="product_id"/>
                                <field name="label_product_name"/>
                                <field name="external_id"/>
                                <field name="create_date"/>
                            </group>
                            <group>
                                <field name="status"/>
                                <field name="master_product"/>
                                <field name="uploaded_in_odoo"/>
                                <field name="formula_code"/>
                                <field name="moq"/>
                                <field name="order_unit"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="General Information">
                                <group>
                                    <group>
                                        <field name="type_of_product_id"/>
                                        <field name="category" readonly="1"/>
                                        <field name="generic_product_type" readonly="1"/>
                                        <field name="subindustry_id" readonly="1"/>
                                        <field name="industry_id" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="presentation"/>
                                        <field name="scent"/>
                                        <field name="type"/>
                                        <field name="volume_liters"/>
                                        <field name="pack_quantity_units"/>
                                        <field name="dilution_rate"/>
                                    </group>
                                </group>
                                <separator string="Description"/>
                                <field name="description" nolabel="1" placeholder="Product description..."/>

                                <separator string="Notes"/>
                                <field name="notes" nolabel="1" placeholder="Internal notes..."/>

                                <separator string="Links"/>
                                <group>
                                    <field name="link_to_product_mockup" widget="url"/>
                                </group>
                            </page>
                            <page string="Costs">
                                <group>
                                    <group>
                                        <field name="bottle_cost"/>
                                        <field name="label_cost"/>
                                        <field name="liquid_cost"/>
                                        <field name="microfibers_cost"/>
                                    </group>
                                    <group>
                                        <field name="plastic_bag_cost"/>
                                        <field name="labor_cost"/>
                                        <field name="shipping_cost"/>
                                        <field name="other_costs"/>
                                        <separator/>
                                        <field name="unit_cost_sar" style="font-weight:bold;"/>
                                    </group>
                                </group>
                            </page>

                            <page string="Pricing List">
                                <group>
                                    <group string="Configuration">
                                        <field name="base_prediction_margin" widget="percentage" force_save="1"/>
                                    </group>

                                    <group string="E-commerce Reference">
                                        <field name="ecommerce_data_html" nolabel="1" colspan="2" readonly="1"/>
                                        <div colspan="2" class="text-muted" style="font-size: 0.75rem; font-style: italic; margin-top: -5px; margin-bottom: 10px; padding-left: 2px;">
                                            <i class="fa fa-mouse-pointer"/> Click on the price to view product specifications
                                        </div>
                                    </group>

                                    <group string="AI Suggestion">
                                        <label for="ai_predicted_price"/>
                                        <div class="o_row">
                                            <field name="ai_predicted_price" widget="monetary"/>
                                            <span class="text-muted pl-2">Margin:</span>
                                            <field name="ai_predicted_margin" widget="percentage" decoration-bf="1"/>
                                        </div>
                                        <label for="ai_market_min" string="Market Range"/>
                                        <div class="o_row" style="font-size: 0.85rem;">
                                            <span class="text-muted mr-1">Min:</span>
                                            <field name="ai_market_min" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                            <span class="text-muted mr-1">Max:</span>
                                            <field name="ai_market_max" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                        </div>
                                    </group>
                                </group>

                                <div class="alert alert-warning text-center" role="alert"
                                     style="margin-bottom: 10px;"
                                     invisible="base_prediction_margin &lt; 0.70">
                                    <i class="fa fa-exclamation-triangle"/>
                                    <strong> Safety Notice:</strong>
                                    High margin detected. If the Total Margin (Base + Tier Extra) exceeds 100%,
                                    the system will cap it at <strong>99%</strong> to ensure price calculation validity.
                                </div>

                                <div class="alert alert-info text-center" role="alert"
                                     style="margin-bottom: 10px; background-color: #e2e3e5; border-color: #d6d8db; color: #383d41;"
                                     invisible="is_ai_pricing_active == True or unit_cost_sar == 0">
                                    <i class="fa fa-info-circle"/>
                                    <strong> Notice: AI Pricing Not Applied.</strong><br/>
                                    The system is using the <b>Standard Pricing Strategy</b> (Cost + Fixed Margin).<br/>
                                    <small>
                                        Reasons: The 0.7L reference product has no AI prediction, the prediction is out of market range,
                                        or the profit margin is too low (&lt;30%).
                                    </small>
                                </div>
                                <div class="alert alert-info text-center" role="alert"
                                     style="margin-bottom: 10px; background-color: #d1ecf1; border-color: #bee5eb; color: #0c5460;"
                                     invisible="not is_box_8_4">
                                    <i class="fa fa-cubes"/>
                                    <strong> Box Presentation (8.4L):</strong>
                                    Price and Margin are inherited directly from the <strong>0.7L reference product</strong> (x12 multiplier).
                                </div>

                                <separator string="Calculated Pricing Tiers (SAR)"/>

                                <group col="5">
                                    <group string="âš¡ SPARK">
                                        <field name="price_tier_spark" nolabel="1" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1" force_save="1" style="font-weight:bold; font-size:1.3em;"/>

                                        <div style="margin-top:4px; margin-bottom:8px;">
                                            <div class="small">Margin: <field name="margin_tier_spark" widget="percentage" class="oe_inline" force_save="1"/></div>
                                            <div class="small">Price per L: <field name="pl_tier_spark" widget="monetary" class="oe_inline" force_save="1"/></div>
                                        </div>

                                        <div class="text-muted" style="font-size: 0.7rem; line-height: 1.4;">
                                            High Volume / Retail<br/>
                                            700 mL/Rags: 5-144 units<br/>
                                            4 L: 4-24 units<br/>
                                            20 L: 1-5 units<br/>
                                            Box 700 mL: 1-12 units
                                        </div>

                                        <div style="font-size: 0.7rem; line-height: 1.3; margin-top: 8px; padding-top: 4px; border-top: 1px dashed #ccc; color: #dc3545;">
                                            <strong>If quantity is lower:</strong><br/>
                                            Use <b>E-commerce Price</b><br/>
                                            (700mL &lt; 5, 4L &lt; 4)
                                        </div>
                                    </group>

                                    <group string="ðŸ’§ FLOW">
                                        <field name="price_tier_flow" nolabel="1" widget="monetary" readonly="1" force_save="1" style="font-weight:bold; font-size:1.3em;"/>

                                        <div style="margin-top:4px; margin-bottom:8px;">
                                            <div class="small">Margin: <field name="margin_tier_flow" widget="percentage" class="oe_inline" force_save="1"/></div>
                                            <div class="small">Price per L: <field name="pl_tier_flow" widget="monetary" class="oe_inline" force_save="1"/></div>
                                        </div>

                                        <div class="text-muted" style="font-size: 0.7rem; line-height: 1.4;">
                                            Standard Wholesale<br/>
                                            700 mL/Rags: 145-1428<br/>
                                            4 L: 25-248 units<br/>
                                            20 L: 6-50 units<br/>
                                            Box 700 mL: 13-119 units
                                        </div>
                                    </group>

                                    <group string="â™»ï¸ CYCLE">
                                        <field name="price_tier_cycle" nolabel="1" widget="monetary" readonly="1" force_save="1" style="font-weight:bold; font-size:1.3em;"/>

                                        <div style="margin-top:4px; margin-bottom:8px;">
                                            <div class="small">Margin: <field name="margin_tier_cycle" widget="percentage" class="oe_inline" force_save="1"/></div>
                                            <div class="small">Price per L: <field name="pl_tier_cycle" widget="monetary" class="oe_inline" force_save="1"/></div>
                                        </div>

                                        <div class="text-muted" style="font-size: 0.7rem; line-height: 1.4;">
                                            Mid-Range Contracts<br/>
                                            700 mL/Rags: 1429-7140<br/>
                                            4 L: 249-1248 units<br/>
                                            20 L: 51-250 units<br/>
                                            Box 700 mL: 120-595 units
                                        </div>
                                    </group>

                                    <group string="ðŸŒŠ STREAM">
                                        <field name="price_tier_stream" nolabel="1" widget="monetary" readonly="1" force_save="1" style="font-weight:bold; font-size:1.3em;"/>

                                        <div style="margin-top:4px; margin-bottom:8px;">
                                            <div class="small">Margin: <field name="margin_tier_stream" widget="percentage" class="oe_inline" force_save="1"/></div>
                                            <div class="small">Price per L: <field name="pl_tier_stream" widget="monetary" class="oe_inline" force_save="1"/></div>
                                        </div>

                                        <div class="text-muted" style="font-size: 0.7rem; line-height: 1.4;">
                                            Large Contracts<br/>
                                            700 mL/Rags: 7141-21432<br/>
                                            4 L: 1249-3748 units<br/>
                                            20 L: 251-750 units<br/>
                                            Box 700 mL: 596-1786
                                        </div>
                                    </group>

                                    <group string="ðŸŒ SOURCE">
                                        <field name="price_tier_source" nolabel="1" widget="monetary" decoration-info="1" readonly="1" force_save="1" style="font-weight:bold; font-size:1.3em;"/>

                                        <div style="margin-top:4px; margin-bottom:8px;">
                                            <div class="small" style="color:#1a73e8;">Margin: <field name="margin_tier_source" widget="percentage" class="oe_inline" force_save="1"/></div>
                                            <div class="small" style="color:#1a73e8;">Price per L: <field name="pl_tier_source" widget="monetary" class="oe_inline" force_save="1"/></div>
                                        </div>

                                        <div class="text-muted" style="font-size: 0.7rem; line-height: 1.4; color:blue;">
                                            Factory Direct<br/>
                                            700 mL/Rags: >21432<br/>
                                            4 L: >3748 units<br/>
                                            20 L: >750 units<br/>
                                            Box 700 mL: >1786 units
                                        </div>
                                    </group>
                                </group>
                            </page>
                            <page string="Dilution Analysis" name="dilution_analysis">
                                <group>
                                    <group string="Dilution Configuration" name="dilution_config">
                                        <field name="dilution_recommendation_id"
                                           options="{'no_create': True, 'no_open': True}"
                                           placeholder="Select a use case..."/>
                                        <field name="dilution_rate_ml"/>
                                        <field name="dilution_ratio"/>
                                        <field name="total_diluted_liters"/>
                                    </group>
                                    <group string="Price per Diluted Litre by Tier" name="diluted_prices">
                                        <label for="diluted_price_spark" string="Spark Tier (P/L Diluted)"/>
                                        <div class="o_row">
                                            <field name="diluted_price_spark"/>
                                            <span>SAR</span>
                                        </div>

                                        <label for="diluted_price_flow" string="Flow Tier (P/L Diluted)"/>
                                        <div class="o_row">
                                            <field name="diluted_price_flow"/>
                                            <span>SAR</span>
                                        </div>

                                        <label for="diluted_price_cycle" string="Cycle Tier (P/L Diluted)"/>
                                        <div class="o_row">
                                            <field name="diluted_price_cycle"/>
                                            <span>SAR</span>
                                        </div>

                                        <label for="diluted_price_stream" string="Stream Tier (P/L Diluted)"/>
                                        <div class="o_row">
                                            <field name="diluted_price_stream"/>
                                            <span>SAR</span>
                                        </div>

                                        <label for="diluted_price_source" string="Source Tier (P/L Diluted)"/>
                                        <div class="o_row">
                                            <field name="diluted_price_source"/>
                                            <span>SAR</span>
                                        </div>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_product_master_search" model="ir.ui.view">
            <field name="name">product.master.search</field>
            <field name="model">product.master</field>
            <field name="arch" type="xml">
                <search string="Search Master Products">
                    <field name="create_date" string="Creation Date"/>
                    <field name="product_name" string="Product Name"/>
                    <field name="product_id" string="Product ID"/>
                    <field name="external_id" string="External ID"/>
                    <field name="label_product_name"/>
                    <field name="formula_code"/>

                    <field name="type_of_product_id"/>
                    <field name="category"/>
                    <field name="generic_product_type"/>
                    <field name="subindustry_id"/>
                    <field name="industry_id"/>

                    <field name="presentation"/>
                    <field name="scent"/>
                    <field name="type"/>
                    <field name="volume_liters"/>
                    <field name="pack_quantity_units"/>
                    <field name="status"/>
                    <field name="uploaded_in_odoo"/>

                    <separator/>
                    <filter string="Master Product" name="is_master_product" domain="[('master_product', '=', True)]"/>
                    <filter string="Uploaded in Odoo" name="is_uploaded" domain="[('uploaded_in_odoo', '=', True)]"/>
                    <filter string="Not Uploaded in Odoo" name="is_not_uploaded" domain="[('uploaded_in_odoo', '=', False)]"/>
                    <separator/>

                    <filter string="Active" name="active" domain="[('status', '=', 'active')]"/>
                    <filter string="Inactive" name="inactive" domain="[('status', '=', 'inactive')]"/>
                    <filter string="New" name="new" domain="[('type', '=', 'new')]"/>
                    <filter string="Refill" name="refill" domain="[('type', '=', 'refill')]"/>

                    <group expand="1" string="Group By">
                        <filter string="Status" name="group_by_status" context="{'group_by': 'status'}"/>
                        <filter string="Industry" name="group_by_industry" context="{'group_by': 'industry_id'}"/>
                        <filter string="Sub-Industry" name="group_by_subindustry" context="{'group_by': 'subindustry_id'}"/>
                        <filter string="Category" name="group_by_category" context="{'group_by': 'category'}"/>
                        <filter string="Type" name="group_by_type" context="{'group_by': 'type'}"/>
                        <filter string="Scent" name="group_by_scent" context="{'group_by': 'scent'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="view_product_master_tree" model="ir.ui.view">
            <field name="name">product.master.tree</field>
            <field name="model">product.master</field>
            <field name="arch" type="xml">
                <tree string="Master Products">
                    <field name="create_date"/>
                    <field name="external_id" optional="hide"/>
                    <field name="product_id"/>
                    <field name="product_name"/>
                    <field name="status" optional="show"/>
                    <field name="label_product_name" optional="hide"/>
                    <field name="master_product" optional="hide"/>
                    <field name="uploaded_in_odoo" optional="hide"/>
                    <field name="notes" optional="hide"/>
                    <field name="formula_code"/>
                    <field name="moq" optional="show"/>
                    <field name="order_unit" optional="hide"/>
                    <field name="presentation" optional="show"/>
                    <field name="scent" optional="hide"/>
                    <field name="type" optional="hide"/>
                    <field name="link_to_product_mockup" optional="hide"/>
                    <field name="volume_liters"/>
                    <field name="pack_quantity_units"/>
                    <field name="type_of_product_id"/>
                    <field name="category"/>
                    <field name="subindustry_id"/>
                    <field name="industry_id"/>
                    <field name="generic_product_type"/>
                    <field name="description" optional="hide"/>
                    <field name="dilution_rate" optional="hide"/>
                    <field name="bottle_cost" optional="hide"/>
                    <field name="label_cost" optional="hide"/>
                    <field name="liquid_cost" optional="hide"/>
                    <field name="microfibers_cost" optional="hide"/>
                    <field name="plastic_bag_cost" optional="hide"/>
                    <field name="labor_cost" optional="hide"/>
                    <field name="shipping_cost" optional="hide"/>
                    <field name="other_costs" optional="hide"/>
                    <field name="unit_cost_sar"/>
                </tree>
            </field>
        </record>

        <record id="action_product_master" model="ir.actions.act_window">
            <field name="name">Master Products</field>
            <field name="res_model">product.master</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_product_master_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new master product
                </p>
            </field>
        </record>

        <menuitem
            id="menu_product_master"
            name="Master Products"
            parent="menu_price_intelligence_root"
            action="action_product_master"
            sequence="20"/>

    </data>
</odoo>