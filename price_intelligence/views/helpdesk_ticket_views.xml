<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="helpdesk_ticket_view_form_inherit_sampling" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form.inherit.sampling</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">

            <field name="team_id" position="after">
                <field name="sampling_cost_calculator_count" invisible="1"/>
            </field>

            <div name="button_box" position="inside">
                <button name="action_open_helpdesk_ticket" position="after">
                <button class="oe_stat_button"
                    name="action_view_sampling_cost_calculators"
                    type="object"
                    icon="fa-flask"
                    help="Show sampling cost calculations for this ticket">
                    <field name="sampling_cost_calculator_count" widget="statinfo" string="Sampling Costs"/>
                </button>
            </button>
            </div>
        </field>
    </record>
</odoo>